FROM apache/nifi:1.7.0

#####################################################################
# Environment Variables
#####################################################################
ARG NIFI_VERSION=1.7.0
ENV NIFI_HOME=/opt/nifi/nifi-1.7.0

#####################################################################
# Add the Pulsar Processors
#####################################################################
COPY custom-nars/$NIFI_VERSION/*.nar $NIFI_HOME/lib/